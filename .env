# Application
APP_NAME=Traffic Share
APP_VERSION=1.0.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security - IMPORTANT: Change this in production!
SECRET_KEY=dev-secret-key-change-this-in-production-must-be-at-least-32-chars-long

JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
DATABASE_URL=postgresql://traffic_user:traffic_password@localhost:5432/traffic_share
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_KEY_PREFIX=traffic_share:

# Telegram Bot
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_ADMIN_IDS=123456789
TELEGRAM_ADMIN_CHANNEL=

# Cryptomus Payment Gateway
CRYPTOMUS_API_KEY=test-api-key
CRYPTOMUS_MERCHANT_ID=test-merchant-id
CRYPTOMUS_API_URL=https://api.cryptomus.com/v1
CRYPTOMUS_WEBHOOK_SECRET=test-webhook-secret

# IP & Region Check
IP_API_ENABLED=True
REGION_CHECK_ENABLED=True

# Traffic & Pricing
PRICE_PER_GB=0.50
MIN_WITHDRAWAL_AMOUNT=5.0
MAX_WITHDRAWAL_AMOUNT=1000.0

# Package Allocation
PACKAGE_ALLOCATION_TTL=60
MAX_PACKAGES_PER_REQUEST=10

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_TRAFFIC_UPDATE=100/minute
RATE_LIMIT_BUYER_PULL=10/minute

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/traffic_share.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# CORS
CORS_ORIGINS=*

# Background Tasks
CLEANUP_TASK_INTERVAL=300
STATS_TASK_INTERVAL=3600
BACKUP_TASK_INTERVAL=86400
